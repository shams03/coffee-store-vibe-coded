# Trio Coffee Shop Order API - Environment variables
# Copy to .env and set values. Never commit .env.

# Database
DATABASE_URL=postgresql+asyncpg://coffee_user:coffee_pass@localhost:5432/coffee_shop

# JWT (use strong secret in production; min 32 chars)
JWT_SECRET_KEY=your-super-secret-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# External services (Trio challenge endpoints)
PAYMENT_SERVICE_URL=https://challenge.trio.dev/api/v1/payment
NOTIFICATION_SERVICE_URL=https://challenge.trio.dev/api/v1/notification

# Optional: Sentry DSN for error monitoring
SENTRY_DSN=

# App
APP_ENV=development
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# Optional: Redis for rate limiting (future)
# REDIS_URL=redis://localhost:6379/0
